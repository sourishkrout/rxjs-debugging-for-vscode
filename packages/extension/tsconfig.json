{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src"
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
